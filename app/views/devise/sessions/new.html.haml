= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "devise-forms"}) do |f|
  - msg = devise_error_messages!
  - if !msg.empty?
    - flash[:msg] = msg.split("<li>").pop.to_s.split("</li>")[0].html_safe  
  .row-fluid
    %h2.form-signin-heading Please sign in!
  .row-fluid
    .input-prepend
      %span.add-on
        %i.icon-envelope
      = f.email_field :email, class: "input-block-level span11", placeholder: "Email address"
  .row-fluid
    .input-prepend
      %span.add-on
        %i.icon-key
      = f.password_field :password, class: "input-block-level span11", placeholder: "Password"
  .row-fluid
    .span5  
      = f.submit "Sign in", class: "btn btn-large btn-primary"
    .span7
      = render "devise/shared/links"