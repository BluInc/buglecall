= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: "devise-forms" }) do |f|
  - msg = devise_error_messages!
  - if !msg.empty?
    - flash[:msg] = msg.split("<li>").pop.to_s.split("</li>")[0].html_safe  
  = f.hidden_field :reset_password_token
  .row-fluid 
    %h2.form-signin-heading Change your password
  .row-fluid
    = f.password_field :password, class: "input-block-level", placeholder: "New Password"
  .row-fluid
    = f.password_field :password_confirmation, class: "input-block-level", placeholder: "Password confirmation"
  .row-fluid
    .span5
      = f.submit "Change my password", class: "btn btn-large btn-primary"
    .span7
      = render "devise/shared/links"
