<div class="user_info">
	<%= image_tag current_user.avatar.url(:medium), class: "img-rounded" %>
	<h1>
	  <%= current_user.email.split("@")[0].html_safe %>
	</h1>
	<span>
	  <%= link_to "view my profile", current_user %>
	</span>
	<span>
	  <%= pluralize(current_user.microposts.count, "micropost") %>
	</span>
</div>